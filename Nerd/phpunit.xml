<?xml version="1.0" encoding="UTF-8"?>

<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false"
         bootstrap="vendor/autoload.php"
>
    <testsuites>
        <testsuite name="Nerd Bundle Test Suite">
            <directory>./Bundle/Tests/</directory>
        </testsuite>
        <testsuite name="Nerd Container Test Suite">
            <directory>./Container/Tests/</directory>
        </testsuite>
        <testsuite name="Nerd Event Manager Test Suite">
            <directory>./Event/Tests/</directory>
        </testsuite>
        <testsuite name="Nerd Kernel Test Suite">
            <directory>./Kernel/Tests/</directory>
        </testsuite>
    </testsuites>
</phpunit>